@using DoAn_TranQuocDuy.Models
@model DoAn_TranQuocDuy.Models.TaiKhoan 
@{
    ViewBag.Title = "Index";

}

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign up to start your session</p>

            @using (Html.BeginForm("Index", "Register", FormMethod.Post))
            {

                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.taiKhoan1, new { @class = "form-control", @placeholder = "Accout Name" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(x => x.matKhau, new { @class = "form-control", @placeholder = "Password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.hoDem, new { @class = "form-control", @placeholder = "Last Name" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.tenTV, new { @class = "form-control", @placeholder = "First Name" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.ngaysinh, new { @type = "date", @class = "form-control" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <span> Male</span>
                    @Html.RadioButtonFor(x => x.gioiTinh, true, new { @checked = "checked" })
                    <span> Female</span>
                    @Html.RadioButtonFor(x => x.gioiTinh, false)
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.soDT, new { @class = "form-control", @placeholder = "Phone Number" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.email, new { @type = "email" ,@class = "form-control", @placeholder = "email" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.diaChi, new { @class = "form-control", @placeholder = "Address" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign Up</button>
                    </div>
                    <!-- /.col -->
                </div>
            }


        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/js/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
</body>


